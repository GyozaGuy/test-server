<!DOCTYPE html>

<html>
  <head>
    <meta charset="utf-8">
    <title>Testing</title>
    <link href="main.css" rel="stylesheet">
    <script src="main.bundle.js"></script>
  </head>

  <body>
    <div data-controller="hello">
      <input data-hello-target="name" type="text">
      <button data-action="click->hello#greet" type="button">Greet</button>
    </div>

    <div data-controller="clipboard" data-clipboard-supported-class="clipboard--supported">
      PIN: <input data-clipboard-target="source" readonly type="text" value="1234">
      <button class="clipboard-button" data-action="clipboard#copy" type="button">Copy to Clipboard</button>
    </div>

    <div data-controller="slideshow" data-slideshow-index-value="1">
      <button data-action="slideshow#previous" type="button">⬅️</button>
      <button data-action="slideshow#next" type="button">➡️</button>

      <div data-slideshow-target="slide">🐵</div>
      <div data-slideshow-target="slide">🙈</div>
      <div data-slideshow-target="slide">🙉</div>
      <div data-slideshow-target="slide">🙊</div>
    </div>

    <div data-controller="content-loader">
      <a data-action="content-loader#load" data-content-loader-url-param="/messages.html"href="">Messages</a>
      <a data-action="content-loader#load" data-content-loader-url-param="/comments.html" href="">Comments</a>
    </div>
  </body>
</html>
